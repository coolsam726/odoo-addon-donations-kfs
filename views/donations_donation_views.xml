<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--        Extend the form -->
        <record id="view_donations_donation_form_inherit_kfs" model="ir.ui.view">
            <field name="name">donations.donation.form.inherit.kfs</field>
            <field name="model">donations.donation</field>
            <field name="inherit_id" ref="donations.view_donations_donation_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <!--                    Action to create kfs journal -->
                    <button name="action_create_kfs_journal"
                            type="object"
                            string="Create KFS Journal"
                            class="btn-primary"
                            groups="kfs_strathmore.group_kfs_strathmore_admin"
                            invisible="not can_create_kfs_journal"
                    />
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <!--                    Add the Kfs Journals magic button -->
                    <button name="button_kfs_journals"
                            type="object"
                            class="oe_stat_button"
                            groups="kfs_strathmore.group_kfs_strathmore_user"
                            icon="fa-book"
                            invisible="kfs_journals_count == 0">
                        <field name="kfs_journals_count" widget="statinfo" string="KFS Journals"/>
                    </button>
                </xpath>
            </field>
        </record>
        <!--        Extend the kanban view -->
        <record id="view_donations_donation_kanban_inherit_kfs" model="ir.ui.view">
            <field name="name">donations.donation.kanban.inherit.kfs</field>
            <field name="model">donations.donation</field>
            <field name="inherit_id" ref="donations.view_donations_donation_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='states_outer_container']" position="inside">
                    <div invisible="not kfs_state" name="kfs_state_container">
                        <strong>KFS Status:</strong>
                        <field name="kfs_state" widget="badge"
                               decoration-warning="kfs_state == 'scheduled'"
                               decoration-info="kfs_state == 'draft'"
                               decoration-success="kfs_state == 'posted'"
                               decoration-danger="kfs_state in ['failed', 'cancelled']"
                        />
                    </div>
                </xpath>
            </field>
        </record>

<!--        Extend the List view -->
        <record id="view_donations_donation_tree_inherit_kfs" model="ir.ui.view">
            <field name="name">donations.donation.tree.inherit.kfs</field>
            <field name="model">donations.donation</field>
            <field name="inherit_id" ref="donations.view_donations_donation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="kfs_state" widget="badge"
                           decoration-warning="kfs_state == 'scheduled'"
                           decoration-info="kfs_state == 'draft'"
                           decoration-success="kfs_state == 'posted'"
                           decoration-danger="kfs_state in ['failed', 'cancelled']"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>